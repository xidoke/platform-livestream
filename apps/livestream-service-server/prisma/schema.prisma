datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Follow {
  createdAt   DateTime @default(now())
  followerId  String?
  followingId String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
}

model Livestream {
  category     String?
  chats        Chat[]
  createdAt    DateTime   @default(now())
  description  String?
  donations    Donation[]
  endTime      DateTime?
  id           String     @id @default(cuid())
  recordingUrl String?
  startTime    DateTime?
  status       String?
  title        String?
  updatedAt    DateTime   @updatedAt
  user         User?      @relation(fields: [userId], references: [id])
  userId       String?
  viewerCount  Int?
}

model Donation {
  amount       Float?
  createdAt    DateTime    @default(now())
  id           String      @id @default(cuid())
  livestream   Livestream? @relation(fields: [livestreamId], references: [id])
  livestreamId String?
  message      String?
  updatedAt    DateTime    @updatedAt
  user         User?       @relation(fields: [userId], references: [id])
  userId       String?
}

model Chat {
  createdAt    DateTime    @default(now())
  id           String      @id @default(cuid())
  livestream   Livestream? @relation(fields: [livestreamId], references: [id])
  livestreamId String?
  message      String?
  updatedAt    DateTime    @updatedAt
  user         User?       @relation(fields: [userId], references: [id])
  userId       String?
}

model User {
  bio            String?
  chats          Chat[]
  createdAt      DateTime     @default(now())
  donations      Donation[]
  email          String?      @unique
  firstName      String?
  id             String       @id @default(cuid())
  isBlocked      Boolean?
  lastName       String?
  livestreams    Livestream[]
  password       String
  profilePicture String?
  roles          Json
  updatedAt      DateTime     @updatedAt
  username       String       @unique
}
